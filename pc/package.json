    "sass": "^1.80.5",
    "simple-git-hooks": "^2.13.0",
    "typescript": "~5.6.0",
    "unplugin-auto-import": "^0.19.0",
    "unplugin-vue-components": "^0.27.5",
    "vite": "^5.4.10",
    "vue-baidu-map-3x": "^1.0.40",
    "vue-tsc": "^2.1.6"
